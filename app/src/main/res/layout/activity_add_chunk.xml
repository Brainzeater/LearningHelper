<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/tv_chunk_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="24sp"/>
            <!-- EditText for Topic Title input -->
            <EditText
                android:id="@+id/new_chunk_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="@string/new_chunk_title_hint"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:textSize="32sp"/>

            <!-- Add button -->

            <TextView
                android:id="@+id/tv_chunk_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content:"
                android:textSize="24sp"/>

            <EditText
                android:id="@+id/et_chunk_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="Type in the content of the chunk"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:textSize="32sp"/>

            <Button
                android:id="@+id/saveChunkButton"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimary"
                android:text="@string/add_button"
                android:textColor="@android:color/primary_text_dark" />

            <Button
                android:id="@+id/deleteButtonChunk"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#F44336"
                android:text="Delete"
                android:textColor="@android:color/primary_text_dark" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>